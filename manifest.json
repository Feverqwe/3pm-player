{
    "manifest_version": 2,
    "name": "__MSG_appName__",
    "description": "__MSG_appDesc__",
    "default_locale": "ru",
    "version": "0.8",
    "minimum_chrome_version": "23",
    "icons": {
        "16": "img/icon_16.png",
        "128": "img/icon_128.png"
    },
    "app": {
        "background": {
            "scripts": ["js/launcher.js"]
        }
    },
    "offline_enabled": true,
    "file_handlers": {
        "audio": {
            "types": [
                "audio/mpeg", "audio/mp4", "audio/ogg"
            ],
            "extensions": [
                "mp3", "m4a", "ogg", "oga"
            ],
            "title": "3pm-audio player"
        },
        "video": {
            "types": [
                "video/mp4", "video/quicktime"
            ],
            "extensions": [
                "mp4", "mov", "m4v"
            ],
            "title": "3pm-video player"
        }
    },
    "permissions": [
        {"mediaGalleries": ["read"]},
        "alwaysOnTopWindows",
        "storage",
        "contextMenus", "fullscreen",
        "identity", "notifications",
        "power",
        {"socket": ["tcp-listen:*:*"]},
        {"fileSystem": ["retainEntries", "directory"]},
        "https://api.vk.com/*",
        "http://*.vk.me/*",
        "https://*.box.com/*",
        "https://dl.boxcloud.com/*",
        "https://*.livefilestore.com/*",
        "https://skydrive.live.com/",
        "http://*.soundcloud.com/*",
        "https://*.soundcloud.com/*",
        "http://userserve-ak.last.fm/*",
        "http://cdn.last.fm/*",
        "http://chart.apis.google.com/*",
        "http://images.amazon.com/*",
        "https://api-web.soundcloud.com/explore/*"
    ]
}
